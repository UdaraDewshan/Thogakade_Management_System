<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="526.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom right, #141e30, #243b55);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginPageController">

    <children>
        <!-- Left side image background -->
        <ImageView fitHeight="526.0" fitWidth="371.0" opacity="0.25">
            <image>
                <Image url="@../images/image (1).png" />
            </image>
        </ImageView>

        <!-- Title Text -->
        <Text layoutX="446.0" layoutY="62.0" style="-fx-fill: white;" text="Welcome To Our System" textAlignment="CENTER" wrappingWidth="266.8876953125">
            <font>
                <Font name="Segoe UI Semibold" size="26.0" />
            </font>
        </Text>

        <!-- Glassy Login Card -->
        <VBox layoutX="401.0" layoutY="129.0" prefHeight="361.0" prefWidth="331.0" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1);                      -fx-background-radius: 20;                      -fx-border-color: rgba(255,255,255,0.25);                      -fx-border-radius: 20;                      -fx-padding: 30;">
            <effect>
                <DropShadow color="#00000070" radius="15.0" />
            </effect>

            <children>
                <Text style="-fx-fill: white;" text="Login">
                    <font>
                        <Font name="Segoe UI Bold" size="30.0" />
                    </font>
                </Text>

                <Text style="-fx-fill: #dcdde1;" text="Username">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Text>
                <TextField fx:id="usernameField" prefHeight="40" prefWidth="230" promptText="Enter your username" style="-fx-background-radius: 8;                                   -fx-background-color: rgba(255,255,255,0.85);                                   -fx-font-size: 14px;                                   -fx-prompt-text-fill: #777;" />

                <Text style="-fx-fill: #dcdde1;" text="Password">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Text>
                <PasswordField fx:id="passwordField" onAction="#LoginAction" prefHeight="40" prefWidth="230" promptText="Enter your password" style="-fx-background-radius: 8;                                       -fx-background-color: rgba(255,255,255,0.85);                                       -fx-font-size: 14px;                                       -fx-prompt-text-fill: #777;" />

                <Button fx:id="btnLogin" onAction="#btnLoginAction" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);                                -fx-background-radius: 20;                                -fx-text-fill: white;                                -fx-font-size: 16px;                                -fx-font-weight: bold;                                -fx-cursor: hand;                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Login">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

        <!-- Footer -->
        <Text layoutX="517.0" layoutY="517.0" style="-fx-fill: #bdc3c7;" />
    </children>
</AnchorPane>
